{
  "name": "car-booking-system",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "next start",
    "worker:notifications": "node workers/notifications.js",
    "worker:driver": "node workers/driver-assignment.js",
    "worker:admin": "node workers/admin.js",
    "worker:analytics": "node workers/analytics.js",
    "worker:cleanup": "node workers/cleanup.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:setup": "npm run db:generate && npm run db:migrate:deploy && npm run db:seed",
    "db:seed": "node scripts/seed-db.js",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "admin:create": "node scripts/create-admin.js",
    "users:create": "node scripts/create-users.js",
    "test:rbac": "node scripts/test-rbac.js",
    "create:test-staff": "node scripts/create-test-staff.js",
    "create:test-admin": "node scripts/create-test-admin.js",
    "setup:rbac-demo": "node scripts/setup-rbac-demo.js",
    "list:users": "node scripts/list-users.js",
    "cleanup:test-users": "node scripts/cleanup-test-users.js",
    "assign:staff-permissions": "node scripts/assign-staff-permissions.js",
    "assign:driver-permissions": "node scripts/assign-driver-permissions.js",
    "workers:all": "concurrently \"npm run worker:notifications\" \"npm run worker:driver\" \"npm run worker:admin\" \"npm run worker:analytics\" \"npm run worker:cleanup\"",
    "demo:rbac": "echo 'Visit http://localhost:3000/rbac-demo to see real-time RBAC in action'",
    "cache:clear": "rmdir /s /q .next 2>nul & npm run build"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@casl/react": "^5.0.0",
    "@prisma/client": "^5.22.0",
    "@tanstack/react-query": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "daisyui": "^4.4.0",
    "date-fns": "^2.30.0",
    "driver.js": "^1.3.1",
    "fastify": "^4.24.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.290.0",
    "moment": "^2.30.1",
    "next": "^14.0.0",
    "nodemailer": "^6.9.0",
    "pg": "^8.11.0",
    "postcss": "^8.4.0",
    "prisma": "^5.22.0",
    "react": "^18.0.0",
    "react-big-calendar": "^1.19.4",
    "react-day-picker": "^8.9.0",
    "react-dom": "^18.0.0",
    "react-select": "^5.10.2",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "tailwindcss": "^3.3.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
